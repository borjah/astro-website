<section id="contact" class="backdrop-blur-lg shadow-lg snap-start min-h-screen py-20 px-6 sm:px-12 lg:px-32 text-gray-100 flex flex-col justify-center">
  <div class="max-w-4xl mx-auto text-center">
    
    <h2 class="scroll-animate text-4xl font-bold mb-6 bg-gradient-to-r from-amber-200 via-orange-300 to-amber-200 bg-clip-text text-transparent border-b-4 border-amber-200 inline-block pb-2">
      Get in Touch
    </h2>
    <p class="scroll-animate text-gray-300 mb-12 max-w-2xl mx-auto leading-relaxed">
      Whether you have a project in mind, want to collaborate, or just say hello â€” my inbox is always open.
    </p>

    <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="scroll-animate space-y-6 bg-white/5 backdrop-blur-md p-8 rounded-2xl shadow-lg">
      <div>
        <label for="name" class="block text-left mb-2 font-medium text-amber-200">Name</label>
        <input id="name" name="name" type="text" required 
          class="w-full px-4 py-3 rounded-lg bg-gray-900 text-white border border-gray-700 focus:border-amber-400 focus:ring-2 focus:ring-amber-300 outline-none transition"/>
      </div>
      <div>
        <label for="email" class="block text-left mb-2 font-medium text-amber-200">Email</label>
        <input id="email" name="email" type="email" required
          class="w-full px-4 py-3 rounded-lg bg-gray-900 text-white border border-gray-700 focus:border-amber-400 focus:ring-2 focus:ring-amber-300 outline-none transition"/>
      </div>
      <div>
        <label for="message" class="block text-left mb-2 font-medium text-amber-200">Message</label>
        <textarea id="message" name="message" rows="5" required
          class="w-full px-4 py-3 rounded-lg bg-gray-900 text-white border border-gray-700 focus:border-amber-400 focus:ring-2 focus:ring-amber-300 outline-none transition"></textarea>
      </div>
      <button type="submit" 
        class="px-8 py-3 bg-gradient-to-r from-amber-200 to-orange-300 text-gray-900 font-semibold rounded-lg shadow-lg hover:scale-105 transition-transform">
        Send Message
      </button>
    </form>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>
