---
const sections = ['home', 'projects', 'about', 'skills', 'contact'];
---
<div class="fixed right-6 top-1/2 -translate-y-1/2 z-50 hidden md:flex flex-col items-center gap-4" id="section-indicator">
  {sections.map(id => (
    <a 
      href={`#${id}`} 
      class="w-3 h-3 rounded-full bg-gray-100 opacity-30 transition-all duration-300"
      data-section={id}
      aria-label={id}
    ></a>
  ))}
</div>

<script type="module" src="/scripts/sectionObserver.js" />
